getCert() {
  if [[ "$#" -eq 0 ]]; then
    echo "usage: getCert some.host.tld:345"
    return 0
  fi
  openssl s_client -connect "$1" < /dev/null \
      | sed -ne '/-BEGIN CERTIFICATE-/,/-END CERTIFICATE-/p' > "$1.crt"
}

