confirm () {
    # call with a prompt string or use a default
    if [ -n "$BASH_VERSION" ]; then
        read -r -p "${1:-Are you sure? [y/N]} " response
    elif [ -n "$ZSH_VERSION" ]; then
        echo "${1:-Are you sure? [y/N]} "
        read response
    fi
    case $response in
        [yY][eE][sS]|[yY])
            true
            ;;
        *)
            false
            ;;
    esac
}


