##############################################################################
# GnuPG
##############################################################################
# %p    The empty string when no passphrase is needed,
#       the string "PGPPASSFD=0" if one is needed.
#
#       This is mostly used in conditional % sequences.
#
# %f    Most PGP commands operate on a single file or a file
#       containing a message.  %f expands to this file's name.
#
# %s    When verifying signatures, there is another temporary file
#       containing the detached signature.  %s expands to this
#       file's name.
#
# %a    In "signing" contexts, this expands to the value of the
#       configuration variable $pgp_sign_as.  You probably need to
#       use this within a conditional % sequence.
#
# %r    In many contexts, mutt passes key IDs to pgp.  %r expands to
#       a list of key IDs.

# decode application/pgp
set pgp_decode_command="~/.mutt/callGpg.sh --status-fd=2 --passphrase-fd 0 --no-verbose --quiet --batch --output - %f"
# set pgp_decode_command="~/.mutt/callGpg.sh %?p?--passphrase-fd 0? --no-verbose --batch --output - %f"

# verify a pgp/mime signature
set pgp_verify_command="~/.mutt/callGpg.sh --status-fd=2 --no-verbose --quiet --batch --output - --verify %s %f"
# set pgp_verify_command="~/.mutt/callGpg.sh --no-verbose --batch --output - --verify %s %f"

# decrypt a pgp/mime attachment
set pgp_decrypt_command="~/.mutt/callGpg.sh --status-fd=2 --passphrase-fd 0 --no-verbose --quiet --batch --output - %f"
# set pgp_decrypt_command="~/.mutt/callGpg.sh --passphrase-fd 0 --no-verbose --batch --output - %f"

set pgp_sign_command="~/.mutt/callGpg.sh --no-verbose --batch --output - --passphrase-fd 0 --armor --detach-sign --textmode %?a?-u %a? %f"

# create a application/pgp signed (old-style) message
set pgp_clearsign_command="~/.mutt/callGpg.sh --no-verbose --batch --quiet --output - --passphrase-fd 0 --armor --textmode --clearsign %?a?-u %a? %f"
# set pgp_clearsign_command="~/.mutt/callGpg.sh --no-verbose --batch --output - --passphrase-fd 0 --armor --textmode --clearsign %?a?-u %a? %f"

# create a pgp/mime encrypted attachment
set pgp_encrypt_only_command="pgpewrap ~/.mutt/callGpg.sh --batch --quiet --no-verbose --output - --encrypt --textmode --armor --always-trust --encrypt-to 0x32CA3654 -- -r %r -- %f"

# create a pgp/mime encrypted and signed attachment
set pgp_encrypt_sign_command="pgpewrap ~/.mutt/callGpg.sh --passphrase-fd 0 --batch --quiet --no-verbose --textmode --output - --encrypt --sign %?a?-u %a? --armor --always-trust --encrypt-to 0x32CA3654 -- -r %r -- %f"
# set pgp_encrypt_sign_command="pgpewrap ~/.mutt/callGpg.sh --passphrase-fd 0 --batch --quiet --no-verbose --textmode --output - --encrypt --sign %?a?-u %a? --armor --always-trust --encrypt-to 0x32CA3654 -- -r %r -- %f"

# import a key into the public key ring
# set pgp_import_command="~/.mutt/callGpg.sh --no-verbose --import %f"
set pgp_import_command="~/.mutt/callGpg.sh --no-verbose --import -v %f"

# export a key from the public key ring
set pgp_export_command="~/.mutt/callGpg.sh --no-verbose --export --armor %r"

# verify a key
set pgp_verify_key_command="~/.mutt/callGpg.sh --verbose --batch --fingerprint --check-sigs %r"
# set pgp_verify_key_command="~/.mutt/callGpg.sh --no-verbose --batch --fingerprint --check-sigs %r"

# read in the public key ring
set pgp_list_pubring_command="~/.mutt/callGpg.sh --no-verbose --batch --quiet --with-colons --list-keys %r"
# set pgp_list_pubring_command="~/.mutt/callGpg.sh --no-verbose --batch --with-colons --list-keys %r"

# read in the secret key ring
set pgp_list_secring_command="~/.mutt/callGpg.sh --no-verbose --batch --quiet --with-colons --list-secret-keys %r"
# set pgp_list_secring_command="~/.mutt/callGpg.sh --no-verbose --batch --with-colons --list-secret-keys %r"

set pgp_autosign=yes
set pgp_sign_as=0x32CA3654
set pgp_replyencrypt=yes
set pgp_timeout=3600
set pgp_good_sign="^gpg: Good signature from"

source `FILE=$HOME/.gnupg/gpg_groups.mutt; if [ ! -s "$FILE" ]; then FILE=/dev/null;fi;echo "$FILE"`

