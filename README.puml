skinparam Arrow {
    Color #gray
    FontSize 16
    Thickness 3
}

skinparam rectangle<<role>> {
    BackgroundColor white
    FontSize 18
}

skinparam rectangle<<host>> {
    BackgroundColor white
    FontSize 20
}

' Roles
'################################################
together {
rectangle core <<role>>
rectangle headless <<role>>
rectangle desktop <<role>>
rectangle dev <<role>>
rectangle gaming <<role>>
rectangle gaming.minimal <<role>>
rectangle imagework <<role>>
rectangle work <<role>>
rectangle "myconfig-master" <<role>> as master

core <-- headless
core <-- desktop
desktop <-- dev
desktop <-- gaming.minimal 
gaming.minimal<-- gaming
desktop <-- imagework
dev <-- work
}

' Hosts
'################################################

together {
rectangle x1extremeG2 <<host>>
x1extremeG2 -[#green]--> work
x1extremeG2 -[#green]--> gaming.minimal
x1extremeG2 -[#green]--> imagework
x1extremeG2 -[#green]--> master

rectangle workstation <<host>>
workstation -[#blue]--> gaming
workstation -[#blue]--> dev
workstation -[#blue]--> headless
}

together {
rectangle nas <<host>>
nas -[#red]--> headless

rectangle vserver <<host>>
vserver -[#red]--> headless

rectangle pi4 <<host>>
pi4 -[#orange]--> core
}