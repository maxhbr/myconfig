                   , "--Low"      , "50"
                   , "--High"     , "85"
                   , "--low"      , "darkgreen"
                   , "--normal"   , "darkorange"
                   , "--high"     , "darkred"
                   ] 10
         , Run MultiCoreTemp ["-t", "@<avg>Â°C"
                             , "-L", "60", "-H", "80"
                             , "-l", "darkgreen"
                             , "-n", "darkorange"
                             , "-h", "darkred"
