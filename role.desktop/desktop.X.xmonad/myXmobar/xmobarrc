         , Run Memory ["-t","<fc=#999999>M:</fc><usedratio><fc=#999999>% (<used>)</fc>"
                      , "--Low"      , "8000"
                      , "--High"     , "16000"
                      , "--low"      , "darkgreen"
                      , "--normal"   , "darkorange"
                      , "--high"     , "darkred"
                      ] 10
         , Run Com "isvpn" ["|", "<fc=#7285c3>", "</fc>"] "" 60
         , Run Com "hasXssLock" ["|", "<fc=darkred>", "</fc>"] "" 60
         , Run Com "mute_telco" ["--print-status", "| <fc=darkred>", "</fc> "] "" 2
